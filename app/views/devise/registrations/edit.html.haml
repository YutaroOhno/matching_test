= render 'partial/navbar'
.container
  .row
    .col-md-6.col-md-offset-3.text-center
      %h2 Edit
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .form.group
          = f.file_field :avatar
        .form.group
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, class: "form-control", placeholder: "email"
        .form.group
          = f.label :nickname
          %br/
          = f.text_field :nickname, autofocus: true, class: "form-control", placeholder: "Input nickname"
        .form.group
          = f.label :profile
          %br/
          = f.text_field :profile, autofocus: true, class: "form-control", placeholder: "Input profile"
        .form-group
          %br/
          = f.password_field :current_password, autofocus: true, class: "form-control", placeholder: "パスワード"
        .actions
          = f.submit "Update", class: "btn btn-primary"
      = render "devise/shared/links"
